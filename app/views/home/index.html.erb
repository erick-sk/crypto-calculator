<div class="mt-10 w-full md:w-1/2 mx-auto bg-gray-300 p-5 rounded-xl">
  <%= form_with do | f | %>
    <div class="flex flex-col mb-2">
      <%= f.label :amount, "Enter your amount to calculate:" %>
      <%= f.number_field :amount, placeholder:"i.e 1000", class:"rounded-xl"%>
    </div>
    
    <div class="flex justify-center">
      <%= f.submit "Calculate", class:"bg-purple-500 hover:bg-purple-600 cursor-pointer text-white font-bold py-2 px-4 rounded" %>
    </div>

  <% end %>
</div>
