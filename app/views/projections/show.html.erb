<h1><%= @projection.amount %></h1>

<div>
  <%= @projection.btc_creation_price %>

  <table>
    <caption>Projections</caption>
    <tr>
      <th scope="col">Months</th>
      <th scope="col">Prices</th>    
    </tr>

    <% @btc_projection.each do |key, value| %>
    <tr>
      <td><%= key %></td>
      <td><%= value %></td>
    </tr>
    <% end %>

     <% @eth_projection.each do |key, value| %>
    <tr>
      <td><%= key %></td>
      <td><%= value %></td>
    </tr>
    <% end %>

  </table>
</div>

<div>
  <%= link_to "Home", projection_export_csv_path(@projection, format: "csv"), class:"underline" %>
</div>