<div class="h-screen">
  <div class="mt-20 w-full md:w-1/2 mx-auto bg-purple-400 pt-10 pb-5 px-5 rounded-xl shadow-2xl">

    <%= form_with(model: @projection, local: true) do | f | %>
      <div class="flex flex-col mb-2">
        <%= f.label :amount, "Enter your amount to calculate:", class:"mb-2 text-white " %>
        <%= f.number_field :amount, placeholder:"i.e 1000", class:"rounded-xl border-transparent focus:border-transparent focus:ring-0"%>
      </div>
      
      <div class="flex justify-center mt-10">
        <%= f.submit "Calculate", class:"bg-purple-500 hover:bg-purple-600 cursor-pointer text-white font-bold py-2 px-4 rounded" %>
      </div>

    <% end %>
  </div>
</div>

